<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../tmpl/head %>
  </head>
  <body class="container">
    <header>
      <% include ../tmpl/header %>
    </header>
    <main>
      <div class="page-header">
        <h2>Login</h2>
      </div>
      <form class="form form-horizontal" id="login" method="post" action="/auth">
        <div class="form-group">
          <label class="col-sm-4">Jira URL</label>
          <div class="col-sm-8">
            <input class="form-control" type="text" name="url" value="" placeholder="e.g. https://jira.atlassian.com/" autofocus />
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-4">Username</label>
          <div class="col-sm-8">
            <input class="form-control" type="text" name="username" value="" placeholder="i.e. jira username" />
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-4">Jira URL</label>
          <div class="col-sm-8">
            <input class="form-control" type="password" name="password" value="" placeholder="i.e. jira password" />
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-8">
            <input class="btn btn-primary" type="submit" />
          </div>
        </div>
      </form>
    </main>
    <footer>
      <% include ../tmpl/footer %>
    </footer>
  </body>
</html>
